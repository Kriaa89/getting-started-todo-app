###################################################
# Environment Variables Configuration
# Copy this file to .env and update with your values
###################################################

# Application Environment
NODE_ENV=development
LOG_LEVEL=info

# Server Ports
BACKEND_PORT=3000
CLIENT_PORT=5173
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Database Configuration
MYSQL_ROOT_PASSWORD=super_secret_root_password_change_me
MYSQL_DB=todos
MYSQL_USER=todouser
MYSQL_PASSWORD=secure_password_change_me_in_production

# JWT Secret (MUST be changed in production!)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long-change-in-production

# Frontend API URL
VITE_API_URL=http://localhost:3000

# Security Settings
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Optional: Enable HTTPS (requires certificates)
# ENABLE_HTTPS=false
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Optional: Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: Redis (for session management)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=redis-password
